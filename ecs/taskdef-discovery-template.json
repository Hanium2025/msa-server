{
  "family": "discovery-service-task",
  "executionRoleArn": "arn:aws:iam::826331271523:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::826331271523:role/ecsServiceDiscoveryRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "containerDefinitions": [
    {
      "name": "discovery-service",
      "image": "${IMAGE_URI}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8761,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_APPLICATION_NAME",
          "value": "discovery-service"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/discovery-service-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8761/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    }
  ]
}
